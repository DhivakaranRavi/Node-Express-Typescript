{
  "name": "school_assignment",
  "version": "1.0.0",
  "description": "School Assignment",
  "scripts": {
    "precommit": "lint-staged",
    "nodemon": "nodemon",
    "start": "node ./build/server.js",
    "clean:build": "rm -rf ./build",
    "copy:api-docs": "cp -r ./src/app/api-docs ./build/app",
    "build": "npm run clean:build && tsc --build && npm run copy:api-docs",
    "test": "jest --verbose",
    "format": "prettier **/**/**/*.ts --ignore-path ./.prettierignore --write"
  },
  "author": "Dhivakaran Ravi",
  "license": "MIT",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.9.1",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.5.0",
    "helmet": "^3.16.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "mysql": "^2.16.0",
    "mysql2": "^1.6.5",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.2.0",
    "swagger-jsdoc": "^3.2.7",
    "typeorm": "^0.2.16",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/node": "^8.0.29",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.16.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.4.3",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1"
  }
}
